<%= form_for @competition do |f| %>
  <% if @competition.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@competition.errors.count, "error") %>
          prohibited this competition from being saved:
      </h2>
      <ul>
        <% @competition.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.submit "Create Item", :class => "btn btn-default"%>
  </p>
<%end %>